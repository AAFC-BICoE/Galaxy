<?xml version='1.0'?>
<tool_dependency>
	<package name="qiime" version="1.7.0">
		<install version="1.0">
            <actions>
                <action type = "change_directory">$INSTALL_DIR</action>
                <action type = "shell_command">
                    git clone --recursive https://github.com/qiime/qiime-galaxy.git
                </action>
                <action type = "set_environment">
                    <environment_variable name = "PATH" action="prepend_to">$INSTALL_DIR/qiime-galaxy/scripts</environment_variable>
                    <environment_variable name = "PYTHONPATH" action="prepend_to">$INSTALL_DIR/qiime-galaxy/lib</environment_variable>
                </action>
				<action type = "setup_virtualenv">
                    numpy
                </action>
                <action type = "setup_virtualenv">
                    qiime
                </action>
                <!--
                p
					set up python env
					somehow tell qiime to not use sudo
					pip install numpy 1.5.1 (1.7.1 is broken??)
					pip install qiime
				-->
			</actions>
		</install>
	</package>
</tool_dependency>
