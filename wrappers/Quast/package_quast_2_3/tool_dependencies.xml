<?xml version="1.0"?>
<tool_dependency>
	<package name="quast" version="2.3">
		<install version="1.0">
			<actions>	
				<action type="download_by_url">https://downloads.sourceforge.net/project/quast/quast-2.3.tar.gz</action>
				<action type="shell_command">ls</action>
				<action type="shell_command">mv * $INSTALL_DIR</action>
				<action type="set_environment">
					<environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
				</action>
			</actions>
		</install>
	</package>
</tool_dependency>
