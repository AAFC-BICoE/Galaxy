<?xml version="1.0"?>
<tool_dependency>
    <package name="interproscan" version="5.8-49.0">
        <install version="1.0">
            <actions>
                <action type="download_by_url">ftp://ftp.ebi.ac.uk/pub/software/unix/iprscan/5/5.8-49.0/interproscan-5.8-49.0-64-bit.tar.gz</action>
                <action type="move_directory_files">
			<source_directory>.</source_directory>
			<destination_directory>$INSTALL_DIR</destination_directory>
		</action>
		<action type="shell_command">mkdir $INSTALL_DIR/data/panther</action>
		<action type="shell_command">wget ftp://ftp.ebi.ac.uk/pub/software/unix/iprscan/5/data/panther-data-9.0.tar.gz</action>
		<action type="shell_command">tar -xvzf panther-data-9.0.tar.gz</action>
		<action type="change_directory">panther</action>
		<action type="move_directory_files">
			<source_directory>.</source_directory>
			<destination_directory>$INSTALL_DIR/data/panther</destination_directory>
		</action>
		<!-- Command below changes URL for look-up service to wherever you want-->
		<action type="shell_command">sed -i "s,http://www.ebi.ac.uk/interpro/match-lookup,http://10.128.124.251:8000/," $INSTALL_DIR/interproscan.properties</action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="INTERPROSCAN_SCRIPT_PATH" action="set_to">$REPOSITORY_INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
Installer for InterProScan 5.8-49.0 (64-bit distribution)
        </readme>
    </package>

</tool_dependency>

