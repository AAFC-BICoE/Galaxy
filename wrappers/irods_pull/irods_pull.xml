<tool id="irods_pull_main" name="Import to Galaxy" version="0.1.0">
	<description>Pull file into galaxy history</description>
	<requirements>
		<requirement type="package" version="0.4.0">
		pythonirodsclient
		</requirement>
	</requirements>
	<code file="get_n_files.py" />
	<command interpreter="python">
	#import os.path
	irods_pull.py
	#if $typePath.type_path=="abs"
		#for $i in $typePath.abs_dirs
			'$i.filenamesAbs'
		#end for
		$output1.id $__new_file_path__ $typePath.type_path 
	#else
		'$typePath.filenamesExi'
		$output2.id $__new_file_path__ $typePath.type_path
	#end if	


	</command>
	
	<inputs>
		<conditional name="typePath">
			<param type="select" name="type_path" label="Choose how you will pass in your file name: " display="radio">
				<option value="abs">Absoltue Path</option>
				<option value="exi">Existing Path</option>
			</param>
			<when value="abs">
				<repeat name="abs_dirs" title="Absolute file paths:" >
					<param name="filenamesAbs" type="text" label="Absolute File path:" />
				</repeat>
			</when>
			<when value="exi">
	<!--			<repeat name="exi_dirs" title="Exisitng file paths:" > -->
				<param type="text" name="depth" label="Depth of file in filesystem: " refresh_on_change="True" />
				<param name="filenamesExi" type="select" label="Existing files:" dynamic_options="get_n_files(depth)" multiple="true" default="1" optional="false"/>
		<!--		</repeat>-->
			<!--	<param name="filenamesExi" type="select" label="Exisiting files: " dynamic_options="get_n_files(depth)" /> -->
			</when>
		</conditional>
	</inputs>

			
	<outputs>
		<data name="output1" format="auto" label="Upload to irods: " >
			<filter>typePath['type_path']=="abs"</filter>
		</data>
		<data name="output2" format="auto" label="Upload to irods: " >
			<filter>typePath['type_path']=="exi"</filter>
		</data>
	</outputs>
	<help>
	Winter is coming...
	</help>
</tool>
