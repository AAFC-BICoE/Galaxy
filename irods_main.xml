<tool id="irods_push_main" name="Export to iRods" version="0.1.0">
	<description>Push file in workflow to irods</description>
	<requirements>
		<requirement type="package" version="0.4.0">pythonirodsclient</requirement>
	</requirements> 
<!--	<code file="get_n_dirs.py" /> -->
		
	<command interpreter="python">irods_main.py $input2 
	<!-- New inserted line -->
	${in.file_name} '$in.name' $input3 $output
	<!--
	#for $m in $inputs: 
		${m.in.file_name} '$m.in.name'
	#end for
	$input3 $output-->
	
	</command>
	<inputs>
		 <param type="select" display="radio" name="input3" label="Do you want to overwrite existing files?">
			<option value="true">Yes </option>
			<option value="false">No </option>
		 </param>
	         <param format="data" name="input2" type="text" label="Directory name:" help="Should not include trailing '/', include the leading '/' Ex: /myDir/Files or /myDir. This should be relative to the root directory: /yourZone/home/yourUsername" />
<!--		<param format="text" name="depth" type="text" label="Depth of relative directory path: " />
		<param name = "dirName" type="select" label="Directory Names: " refresh_on_change="True" dynamic_options="get_n_dirs(depth)" />  -->
		
				 
		<!--
		 <repeat name="inputs" title="Files">
		 <param format="data" name="in" type="data" label="Push file" />
		 </repeat>-->
		<!-- New inserted line -->
		<param format="data" name="in" type="data" label="File(s) to export:" />
	</inputs>
	

	<outputs>
		<data format="data" name="output" />
	</outputs> 
	<help>
	This tool will push a given file to the administrators main collection in irods.
	</help>
</tool>
